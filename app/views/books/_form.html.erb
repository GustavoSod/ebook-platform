  </div>

  <div class="my-5">
    <%= form.label :description, "Descrição:", class:"text-white lg:text-xl text-base font-semibold" %>
    <%= form.text_field :description, class: "block shadow rounded-md border border-gray-900 bg-zinc-600 outline-none p-4 mt-4 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-green-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
