<div class="w-full min-h-[70vh]">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Books" %>

  <% if current_user&.writer? %>
    <div class="flex justify-around items-center mt-20">
      <h1 class="font-bold text-4xl text-white">Seus livros</h1>
      <%= link_to "Publicar Livro", new_book_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium bg-green-400" %>
    </div>

    <div id="books" class="min-w-full">
      <% @books.each do |book| %>
        <%= render book %>
        <p>
          <%= link_to "Show this book", book, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </p>
      <% end %>
    </div>
  <% else %>

    <div class="flex justify-center items-center w-[70%] m-auto mt-20">
      <h1 class="font-bold text-4xl text-white">Nossos livros <span class="text-green-400">dispon√≠veis</span></h1>
    </div>

    <div id="books" class="min-w-full">
      <% @books.each do |book| %>
        <%= render book %>
        <p>
          <%= link_to "Show this book", book, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
