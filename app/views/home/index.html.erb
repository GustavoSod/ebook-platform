<html lang="pt-BR">
  <head>
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
  </head>
  <body>
    <div class="relative flex flex-col justify-center items-center">
      <div class="h-[85vh] w-full bg-black relative">
        <%= image_tag("ebook.jpg", alt: "rss feed", class: "object-cover w-full h-full") %>
        <div class="absolute inset-0 bg-black opacity-70"></div>
        <div class="absolute inset-0 flex flex-col items-center justify-center" data-aos="fade">
          <h1 class="text-white text-6xl font-semibold mb-5">
            <span class="text-green-400 font-bold">eBooks</span> 100% gratuitos
          </h1>
          <p class= "text-white text-xl text-center leading-8">
            Plataforma ideal para lançar seus próprios <br> eBooks e baixar de outros criadores. Tudo isso 100% gratuito
          </p>
        </div>
      </div>
      <div class="flex flex-row w-[70%] items-center justify-around" data-aos="fade-right">
        <h2 class= "text-white text-5xl font-bold ml-20">Lance seus eBooks <br><span class="text-green-400">rapidamente</span> </h2>
        <%= image_tag("bookanimation.png", alt: "rss feed", class: "w-[500px]") %>
      </div>
      <div class="flex flex-row w-[70%] items-center justify-around" data-aos="fade-left">
        <h2 class= "text-white text-5xl font-bold ml-20">Leia os eBooks <br> dos <span class="text-green-400">nossos criadores</span></h2>
        <%= image_tag("reading.png", alt: "rss feed", class: "w-[500px]") %>
      </div>
    </div>

    <div class="bg-green-500 flex flex-row justify-around items-center p-8 w-full mt-32">
      <h1 class="text-white text-3xl font-semibold" data-aos="fade">+ 250.000 downloads</h1>
      <h1 class="text-white text-3xl font-semibold" data-aos="fade">+ 150.000 usuarios</h1>
      <h1 class="text-white text-3xl font-semibold" data-aos="fade">+ 5.000 eBooks</h1>
    </div>

    <div class="w-full mt-36">
      <h2 class="text-white text-5xl font-semibold text-center">Benefícios</h2>
      <div class="w-full flex flex-row justify-around mt-28" data-aos="fade">
        <div class="flex flex-col items-center justify-center">
          <div class="bg-zinc-950 p-10 rounded-lg"><%= image_tag("money.png", alt: "rss feed", class: "w-[120px]") %></div>
          <p class="text-white mt-5">100% Gratuito</p>
        </div>
        <div class="flex flex-col items-center justify-center">
          <div class="bg-zinc-950 p-10 rounded-lg"><%= image_tag("cadeado.png", alt: "rss feed", class: "w-[120px]") %></div>
          <p class="text-white mt-5">Sempre Seguro</p>
        </div>
        <div class="flex flex-col items-center justify-center">
          <div class="bg-zinc-950 p-10 rounded-lg"><%= image_tag("atualizada.png", alt: "rss feed", class: "w-[120px] pl-2") %></div>
          <p class="text-white mt-5">eBooks Atualizados</p>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
      AOS.init({
        duration: 2000,
      });
    </script>
  </body>
</html>
