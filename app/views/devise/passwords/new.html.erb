<div class="flex flex-col justify-center items-center bg-zinc-900">


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "sm:w-full flex flex-col items-center max-w-xs"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class ="text-green-400 font-semibold text-4xl mt-20 mb-10 text-end w-[60%]">Esqueçeu sua senha?</h2>

  <div class="field w-full flex">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Digite seu email", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
  </div>

  <div class="bg-green-400 p-4 rounded-lg mt-10 mb-10 w-full">
    <%= f.submit "Enviar senha de recuperação", class:'text-white font-semibold' %>
  </div>
  
  <%= render "devise/shared/links" %>

<% end %>
</div>