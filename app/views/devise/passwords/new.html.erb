<div class="flex flex-col w-full items-center justify-center h-[60vh]">
  <h2 class="text-green-400 text-4xl font-semibold mb-10">Esqueceu sua senha?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"w-[40%]" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-6
    ">
      <%= f.label :email, class:"text-white" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Digite seu email", class:"bg-zinc-600 rounded-lg w-full p-4" %>
    </div>

    <div class="actions bg-green-400 rounded-lg p-4 flex items-center justify-center mb-4">
      <%= f.submit "Mandar instruções para nova senha", class:"text-white" %>
    </div>

    <div class="w-full flex items-center">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>