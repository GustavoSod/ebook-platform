<div class="flex flex-col justify-center items-center bg-zinc-900">


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class ="text-green-400 font-semibold text-4xl mt-20 mb-10 text-end w-[60%]">Trocar sua senha</h2>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mb-4">
    <%= f.label :password, "New password", class:'text-white' %><br />
    <% if @minimum_password_length %>
      <em class="text-white">(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Digite sua senha", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class:'text-white' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirme sua senha", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
  </div>

  <div class="bg-green-400 p-4 rounded-lg mt-10 mb-10 w-full">
    <%= f.submit "Change my password", class:'text-white font-semibold' %>
  </div>
<% end %>

</div>