<div class="flex flex-col w-full items-center justify-center xl:h-[65vh] mt-14">

  <h2 class="text-green-400 text-4xl font-semibold mb-10">Mude sua senha</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class:"xl:w-[40%] w-[80%]" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mb-4">
      <%= f.label :password, "Nova senha", class:"text-white" %><br />
      <% if @minimum_password_length %>
        <em class="text-white">(<%= @minimum_password_length %> caracteres mÃ­nimos)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Nova senha", class:"bg-zinc-600 rounded-lg w-full p-4" %>
    </div>

    <div class="field mb-10">
      <%= f.label :password_confirmation, "Confirmar nova senha", class:"text-white" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar nova senha", class:"bg-zinc-600 rounded-lg w-full p-4" %>
    </div>

    <div class="actions bg-green-400 rounded-lg p-4 flex items-center justify-center mb-4">
      <%= f.submit "Mudar minha senha", class:"text-white" %>
    </div>

    <div class="w-full flex items-center">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
  
</div>
