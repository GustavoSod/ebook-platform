<div class="flex flex-col justify-center items-center bg-zinc-900">
  <h2 class ="text-green-400 font-semibold text-5xl mt-20 mb-10">Entrar</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-xs w-[70%] flex flex-col items-center" }) do |f| %>
    <div class="field mb-4 w-[50%]">
      <%= f.label :email, class: "text-white mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Digite seu email", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
    </div>

    <div class="field mb-4 w-[50%]">
      <%= f.label :password, class: "text-white mb-2" %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Digite sua senha", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field w-[50%]">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-white" %>
      </div>
    <% end %>

    <div class="bg-green-400 flex items-center justify-center p-4 rounded-lg mt-10 mb-10 w-[50%]">
      <%= f.submit "Entrar", class:"text-white font-semibold text-xl" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
