<div class="flex flex-col w-full items-center justify-center xl:h-[60vh] mt-14">
  <h2 class="text-green-400 text-4xl font-semibold mb-10">Entre para ler</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"xl:w-[40%] w-[80%]"}) do |f| %>
    <div class="field mb-4">
      <%= f.label :email, class:"text-white" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Digite seu email", class:"bg-zinc-600 rounded-lg w-full p-4" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password, class:"text-white"  %><br />
      <%= f.password_field :password, autocomplete: "current-password",  placeholder:"Digite sua senha", class:"bg-zinc-600 rounded-lg w-full p-4" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"text-white"  %>
      </div>
    <% end %>

    <div class="actions bg-green-400 rounded-lg p-4 flex items-center justify-center mb-4">
      <%= f.submit "Entrar", class:"text-white font-semibold text-xl" %>
    </div>

    <div class="w-full">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

